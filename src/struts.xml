<!DOCTYPE struts PUBLIC
   	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />
	<package name="default" extends="struts-default">

		<action name="login" class="xin.whitenight.action.UserAction"
			method="login">
			<result name="success">/index.jsp</result>
			<result name="error">/login.jsp</result>
		</action>

		<action name="logout" class="xin.whitenight.action.UserAction"
			method="logout">
			<result name="success">/index.jsp</result>
		</action>

		<action name="regist" class="xin.whitenight.action.UserAction"
			method="regist">
			<result name="success">/login.jsp</result>
			<result name="error">/regist.jsp</result>
		</action>

		<action name="articlelist" class="xin.whitenight.action.ArticleAction"
			method="getArticlelist">
			<result name="success">/articlelist.jsp</result>
		</action>

		<action name="article" class="xin.whitenight.action.ArticleAction"
			method="getArticleContent">
			<result name="success">/article.jsp</result>
			<result name="error">/articlelist.jsp</result>
		</action>

	</package>
</struts>
		